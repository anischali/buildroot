#! /bin/sh

[ -f /etc/hostapd.conf ] || exit 0

start() {
	printf "Starting hostapd: "
	start-stop-daemon -b -S -x /usr/sbin/hostapd /etc/hostapd.conf
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}

stop() {
	printf "Stopping hostapd: "
	start-stop-daemon -K -q -x /usr/sbin/hostapd
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}

restart() {
	stop
	start
}


case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart|reload)
		restart
		;;
	*)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit 0
